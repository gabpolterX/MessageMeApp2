<h1 class="ui center aligned header">Welcome to the MessageMeApp</h1>
<h2 class="ui center aligned icon header">
  <i class="orange circular user icon"></i>
  Log in
</h2>
<div class="ui placeholder segment chatbox">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_with(scope: :session, url: login_path, html: {class: "ui form", role: "form"} ) do |f| %>
          <div class="field">
            <div><label>Username</label></div>
            <br>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Password</label>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Log in", class:"ui orange small submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <%= link_to "Sign up", signup_path, class: "ui big orange button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>